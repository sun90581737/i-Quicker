@{
    ViewBag.Title = "视频播放";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<html lang="zh-CN">
<head>
    <style type="text/css">
        .videoBox {
            width: 100%;
            height: 100%;
        }

        #example_video {
            width: 100%;
            height: 100%;
        }
        ::-webkit-scrollbar {
            display: none; /* Chrome Safari */
        }
    </style>
</head>
<body>
    <div class="videoBox">
        <video id="example_video" class="video-js vjs-default-skin vjs-big-play-centered" muted autoplay controls preload="none" width="640" height="264" poster="" data-setup="{}">
        </video>
    </div>
</body>
</html>
<script type="text/javascript">
    var video = document.getElementById("example_video");
    var vList = ['http://img.scdear.com/JD.mp4'];
    var vLen = vList.length;
    var curr = 0;
    $(document).ready(function () {
        play();
        video.addEventListener('ended', function () {
            play();
        });
    });
    function play() {
        video.src = vList[curr];
        video.load();
        video.play();
        curr++;
        if (curr >= vLen) {
            curr = 0;
        }
    }
</script>
