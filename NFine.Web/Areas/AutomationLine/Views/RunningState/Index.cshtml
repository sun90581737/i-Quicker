                    $("#OngridList").css({ "width": "850px", "height": "530px", "position": "relative", "margin": "auto", "background-size": "100% 100%", "top": "82px" });
                    S();
                }
            }
        })
    }

    function Colour(DescribeColor) {
        var colour = "#fff";
        if (DescribeColor == "0") {
            colour = "#D24D57";
        } else if (DescribeColor == "1") {
            colour = "#26A65B";
        } else if (DescribeColor == "2") {
            colour = "#EB7347";
        } else if (DescribeColor == "3") {
            colour = "#84AF9B";
        } else if (DescribeColor == "4") {
            colour = "#FC9D99";
        } else if (DescribeColor == "5") {
            colour = "#00CCFF";
        } 
        return colour;
    }
</script>

