<script type="text/javascript">
    // { el:"",text:"",color:""}
    var tunningTip = function (opts) {
        var el = ".tip-" + opts.el;
        $(el).children("div[class='tip-text']").html(opts.text);
        $(el).css("background", opts.color);
        $(el).children("span[class='tip-arrow']").css("border-color", opts.color + " transparent transparent");
    }
    var tunningTips = function (opts) {
        var el = ".tip-" + opts.el;
        $(el).children("div[class='tip-text']").html(opts.text);
        $(el).css("background", opts.color);
        $(el).children("span[class='tip-arrows']").css("border-color", " transparent transparent" + opts.color);
    }
    $(function () {
        ImgLoading(true);
    })
    function S() {
        window.setInterval(function () {
            ImgLoading(false);
        }, 3000);
    }
    function ImgLoading(first) {
        $.ajax({
            async: false,
            url: "/AutomationLine/RunningState/GetRunningState",
            type: "get",
            dataType: "json",
            success: function (da) {
                var item = da[0];
                tunningTip({
                    el: "1",
                    text: item.Describe1,
                    color: item.DescribeColor1,
                });
                tunningTip({
                    el: "2",
                    text: item.Describe2,
                    color: item.DescribeColor2,
                });
                tunningTip({
                    el: "3",
                    text: item.Describe3,
                    color: item.DescribeColor3,
                });
                tunningTips({
                    el: "4",
                    text: item.Describe4,
                    color: item.DescribeColor4,
                });
                tunningTips({
                    el: "5",
                    text: item.Describe5,
                    color: item.DescribeColor5,
                });
                tunningTips({
                    el: "6",
                    text: item.Describe6,
                    color: item.DescribeColor6,
                });
                if (item.Describe7 != null) {
                    var strs = new Array();
                    strs = item.Describe7.split(";");
                    var Sum = Number(strs[0]) + Number(strs[1]) + Number(strs[2]) + Number(strs[3]) + Number(strs[4]) + Number(strs[5]);
                    if (Sum > 0) {
                        $("#dis1").css("width", strs[0] / Sum * 100 + "%");
                        $("#dis2").css("width", strs[1] / Sum * 100 + "%");
                        $("#dis3").css("width", strs[2] / Sum * 100 + "%");
                        $("#dis4").css("width", strs[3] / Sum * 100 + "%");
                        $("#dis5").css("width", strs[4] / Sum * 100 + "%");
                        $("#dis6").css("width", strs[5] / Sum * 100 + "%");
                    } else {
                        $("#dis1").css("width", strs[0] + "%");
                        $("#dis2").css("width", strs[1] + "%");
                        $("#dis3").css("width", strs[2] + "%");
                        $("#dis4").css("width", strs[3] + "%");
                        $("#dis5").css("width", strs[4] + "%");
                        $("#dis6").css("width", strs[5] + "%");
                    }


                    var strs0 = new Array();
                    strs0 = item.DescribeColor7.split(";");
                    $("#dis1").css("background-color", Colour(strs0[0]));
                    $("#dis2").css("background-color", Colour(strs0[1]));
                    $("#dis3").css("background-color", Colour(strs0[2]));
                    $("#dis4").css("background-color", Colour(strs0[3]));
                    $("#dis5").css("background-color", Colour(strs0[4]));
                    $("#dis6").css("background-color", Colour(strs0[5]));

                    var strs1 = new Array();
                    strs1 = item.Describe8.split(";");
                    var Sum2 = Number(strs1[0]) + Number(strs1[1]) + Number(strs1[2]) + Number(strs1[3]) + Number(strs1[4]) + Number(strs1[5]);
                    if (Sum2 > 0) {
                        $("#yis1").css("width", strs1[0] / Sum2 * 100 + "%");
                        $("#yis2").css("width", strs1[1] / Sum2 * 100 + "%");
                        $("#yis3").css("width", strs1[2] / Sum2 * 100 + "%");
                        $("#yis4").css("width", strs1[3] / Sum2 * 100 + "%");
                        $("#yis5").css("width", strs1[4] / Sum2 * 100 + "%");
                        $("#yis6").css("width", strs1[5] / Sum2 * 100 + "%");
                    } else {
                        $("#yis1").css("width", strs1[0] + "%");
                        $("#yis2").css("width", strs1[1] + "%");
                        $("#yis3").css("width", strs1[2] + "%");
                        $("#yis4").css("width", strs1[3] + "%");
                        $("#yis5").css("width", strs1[4] + "%");
                        $("#yis6").css("width", strs1[5] + "%");
                    }

                    var strs2 = new Array();
                    strs2 = item.DescribeColor8.split(";");
                    $("#yis1").css("background-color", Colour(strs2[0]));
                    $("#yis2").css("background-color", Colour(strs2[1]));
                    $("#yis3").css("background-color", Colour(strs2[2]));
                    $("#yis4").css("background-color", Colour(strs2[3]));
                    $("#yis5").css("background-color", Colour(strs2[4]));
                    $("#yis6").css("background-color", Colour(strs2[5]));

                    //图例 状态默认
                    //$("#tl1").css("background-color", strs0[0]);
                    //$("#tl2").css("background-color", strs0[1]);
                    //$("#tl3").css("background-color", strs0[2]);
                    //$("#tl4").css("background-color", strs0[3]);
                    //$("#tl5").css("background-color", strs0[4]);
                    //$("#tl6").css("background-color", strs0[5]);
                }

                if (first) {  // 第一次初始化 直接取值
                    console.log("laod...");
